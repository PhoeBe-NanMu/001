<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="right">

    <Button
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="#333"
        android:drawableLeft="@mipmap/icon_group"
        android:layout_width="wrap_content"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="58dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:text="@string/text_grop"
        android:layout_height="wrap_content" />


    <Button
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="#333"
        android:drawableLeft="@mipmap/icon_add"
        android:layout_width="wrap_content"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="58dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:text="@string/text_add"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="#333"
        android:drawableLeft="@mipmap/icon_scan"
        android:layout_width="wrap_content"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="76dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:text="@string/text_scan"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="#333"
        android:drawableLeft="@mipmap/icon_card"
        android:layout_width="wrap_content"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="76dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:text="@string/text_mon"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="#333"
        android:drawableLeft="@mipmap/icon_help"
        android:layout_width="wrap_content"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="40dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:text="@string/text_help"
        android:layout_height="wrap_content" />
</LinearLayout>
